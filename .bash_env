if [[ -v "BASH_ENV_LOADED_LOCAL" ]]; then
    return 0
fi
export BASH_ENV_LOADED_LOCAL=t

. "$HOME/.bash_env_nobiruwa"

# X configuration
export DISPLAY=`grep -oP "(?<=nameserver ).+" /etc/resolv.conf`:0.0

# Cygwin X Server authentication
CYGWIN_HOME="/mnt/c/cygwin64$HOME"
CYGWIN_XAUTHORITY="$CYGWIN_HOME/.Xauthority"
if [ -f "$CYGWIN_XAUTHORITY" ] ; then
    cp "$CYGWIN_XAUTHORITY" $HOME/
fi

